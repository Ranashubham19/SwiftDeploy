# --- SWIFTDEPLOY AI PRODUCTION ENVIRONMENT ---

# Production Environment
NODE_ENV=production

# Base URLs
BASE_URL=https://yourdomain.com
FRONTEND_URL=https://yourdomain.com
VITE_API_URL=https://yourdomain.com

# Google OAuth Credentials
GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CLIENT_SECRET=your_production_google_client_secret
VITE_GOOGLE_CLIENT_ID=your_production_google_client_id
GOOGLE_CALLBACK_URL=https://yourdomain.com/auth/google/callback

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_production_telegram_bot_token

# Google Gemini API Key
API_KEY=your_production_gemini_api_key

# Backend Configuration
PORT=3001
SESSION_SECRET=your_production_session_secret_32_chars_min
JWT_SECRET=your_production_jwt_secret_32_chars_min

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_production_email@gmail.com
SMTP_PASS=your_production_app_password
EMAIL_FROM=your_production_email@gmail.com