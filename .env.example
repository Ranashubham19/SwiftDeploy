
# --- SWIFTDEPLOY AI PRODUCTION CONFIG ---

# Production Environment
NODE_ENV=production

# Base URLs
BASE_URL=https://your-railway-app.up.railway.app
FRONTEND_URL=https://your-frontend-domain.vercel.app
VITE_API_URL=https://your-railway-app.up.railway.app
# Optional for Vercel serverless API proxy (`/api/*` -> Railway backend)
BACKEND_API_URL=https://your-railway-app.up.railway.app

# Google OAuth Credentials
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE
VITE_GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
GOOGLE_CALLBACK_URL=https://your-railway-app.up.railway.app/auth/google/callback

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE

# Google Gemini API Key
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# AI Provider Routing
# Set to `sarvam` to use Sarvam as primary provider with automatic key failover.
AI_PROVIDER=sarvam
# Set true only if you want to hard-lock a single provider (disables cross-provider failover).
AI_FORCE_PROVIDER=false
SARVAM_API_KEYS=sk_primary_key,sk_secondary_key,sk_tertiary_key
SARVAM_MODEL=sarvam-m
SARVAM_BASE_URL=https://api.sarvam.ai/v1/chat/completions
OPENROUTER_API_KEY=YOUR_OPENROUTER_API_KEY_HERE
OPENROUTER_MODEL=moonshotai/kimi-k2
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1/chat/completions
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE
OPENAI_MODEL=gpt-5.2
ANTHROPIC_API_KEY=YOUR_ANTHROPIC_API_KEY_HERE
ANTHROPIC_MODEL=claude-opus-4-5

# Discord Bot (Gateway Runtime)
DISCORD_TOKEN=YOUR_DISCORD_BOT_TOKEN_HERE
DISCORD_CLIENT_ID=YOUR_DISCORD_APPLICATION_ID_HERE
# Optional: set for instant slash command updates in one server during testing
DISCORD_GUILD_ID=

# Stripe Billing Configuration
STRIPE_SECRET_KEY=sk_live_xxx_or_sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxx_or_pk_test_xxx
STRIPE_ACCOUNT_LABEL=SwiftDeploy Main Stripe Account
STRIPE_PRICE_PRO_FLEET=price_xxx_monthly_plan_id
STRIPE_PRICE_PRO_FLEET_DISCOUNTED=price_xxx_monthly_discounted_30
STRIPE_PRICE_PRO_FLEET_BASE=price_xxx_monthly_base_40
STRIPE_UPI_AMOUNT_PAISE=249900

# Razorpay Billing Configuration (India)
RAZORPAY_KEY_ID=rzp_live_xxx_or_rzp_test_xxx
RAZORPAY_KEY_SECRET=your_razorpay_secret_here

# Backend Configuration
PORT=3001
SESSION_SECRET=YOUR_VERY_LONG_RANDOM_SESSION_SECRET_HERE_MIN_32_CHARS
JWT_SECRET=YOUR_VERY_LONG_RANDOM_JWT_SECRET_HERE_MIN_32_CHARS

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=your_email@gmail.com

# --- TELEGRAM OPENROUTER CHAT BOT (NEW) ---
# Use these for the new backend/src bot runtime
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
APP_URL=https://your-railway-app.up.railway.app
TELEGRAM_USE_WEBHOOK=false
TELEGRAM_API_TIMEOUT_MS=15000
TELEGRAM_LAUNCH_TIMEOUT_MS=90000
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/telegram_bot?schema=public
REDIS_URL=
ADMIN_TELEGRAM_IDS=12345,67890
DEFAULT_MODEL=openrouter/auto
FALLBACK_MODEL=openai/gpt-4o-mini
MAX_INPUT_CHARS=12000
MAX_OUTPUT_TOKENS=1200
STREAM_EDIT_INTERVAL_MS=900
